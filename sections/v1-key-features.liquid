
    <div class="page-padding">
      <div class="container-v1 vertical">
        <div class="left-aligned-header key-features">
          <h1 class="h1-section">{{ section.settings.titel | newline_to_br }}</h1>
          {%- if section.settings.subtitel_weergeven -%}<p>{{ section.settings.tagline | newline_to_br }}</p>{%- endif -%}
        </div>
        <div class="featured-swiper-component">
          <div id="key-features" class="swiper-container swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
            <div class="swiper-wrapper">
              {%- for block in section.blocks -%}{%- if block.type == "slide" -%}<div class="swiper-slide" block.shopify_attributes>
                <div class="key-feature-slide">
                  <div class="key-feature-frame">{%- if block.settings.afbeelding == nil -%}<img src="{{ 'image.png' | asset_url }}" loading="lazy" sizes="(max-width: 479px) 100vw, (max-width: 767px) 91vw, (max-width: 991px) 90vw, 89vw" srcset="{{ 'image-p-500.png' | asset_url }} 500w, {{ 'image.png' | asset_url }} 774w" alt="" class="key-feature-img">{%- else -%}<img src="{{ block.settings.afbeelding.src | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.afbeelding.alt | escape }}" class="key-feature-img" srcset="{{ block.settings.afbeelding | img_url: '1920x' }} 1920w,{{ block.settings.afbeelding | img_url: '1600x' }} 1600w,{{ block.settings.afbeelding | img_url: '1366x' }} 1366w,{{ block.settings.afbeelding | img_url: '1024x' }} 1024w,{{ block.settings.afbeelding | img_url: '768x' }} 768w,{{ block.settings.afbeelding | img_url: '640x' }} 640w">{%- endif -%}</div>
                  <div class="swiper-inner-container">
                    <div class="feature-title">{{ block.settings.titel | newline_to_br }}</div>
                    <div class="feature-paragraph">{{ block.settings.paragraph | newline_to_br }}</div>
                  </div>
                </div>
              </div>{%- endif -%}{%- endfor -%}
            </div>
            <div class="slider-arrow-container-relative">
              <div id="key-features-prev-arrow" class="slider-arrow"><img src="{{ 'arrow-right.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
              <div id="key-features-next-arrow" class="slider-arrow"><img src="{{ 'right-arrow.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","key-features");</script>
        
{% schema %}{
  "presets": [
    {
      "name": "V1 - Key features"
    }
  ],
  "name": "V1 - Key features",
  "tag": "div",
  "class": "key-features",
  "settings": [
    {
      "type": "textarea",
      "id": "titel",
      "label": "Titel",
      "default": "Highlight key features of the product or service"
    },
    {
      "type": "textarea",
      "id": "tagline",
      "label": "Tagline",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    },
    {
      "type": "checkbox",
      "id": "subtitel_weergeven",
      "label": "Subtitel weergeven",
      "default": true
    }
  ],
  "blocks": [
    {
      "name": "Slide",
      "type": "slide",
      "settings": [
        {
          "type": "textarea",
          "id": "titel",
          "label": "Titel",
          "default": "Insant Warmth Experience"
        },
        {
          "type": "textarea",
          "id": "paragraph",
          "label": "Paragraph",
          "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit. Suspendisse varius enim in eros elementum tristique. Duis cursus, mi quis viverra ornare, eros dolor interdum nulla."
        },
        {
          "type": "image_picker",
          "id": "afbeelding",
          "label": "Afbeelding"
        }
      ]
    }
  ]
}{% endschema %}