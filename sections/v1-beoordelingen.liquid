  "name": "V1 - Beoordelingen",
  "tag": "div",
  "class": "testimonials",
  "settings": [
    {
      "type": "textarea",
      "id": "titel",
      "label": "Titel",
      "default": "Klanten houden van Heatup."
    },
    {
      "type": "textarea",
      "id": "paragraph",
      "label": "Paragraph",
      "default": "Lorem ipsum dolor sit amet, consectetur adipiscing elit."
    }
  ],
  "blocks": [
    {
      "name": "Review",
      "type": "review",
      "settings": [
        {
          "type": "textarea",
          "id": "titel",
          "label": "Titel",
          "default": "Customizable Comfort Settings"
        },
        {
