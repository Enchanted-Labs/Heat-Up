
    <div class="page-padding">
      <div class="container-v1 vertical">
        <div class="left-aligned-header">
          <h1 class="h1-section">{{ section.settings.titel | newline_to_br }}</h1>
          <p>{{ section.settings.paragraph | newline_to_br }}</p>
        </div>
        <div class="testimonial-swiper-component">
          <div id="review-swiper" class="swiper-container swiper-container-initialized swiper-container-horizontal swiper-container-pointer-events">
            <div class="swiper-wrapper">
              {%- for block in section.blocks -%}{%- if block.type == "review" -%}<div class="swiper-slide" block.shopify_attributes>
                <div class="review-slide">
                  <div class="swiper-inner-container">
                    <div class="testimonial-stars">{%- if block.settings.review_stars == nil -%}<img src="{{ 'stars.svg' | asset_url }}" loading="lazy" alt="">{%- else -%}<img src="{{ block.settings.review_stars.src | img_url: 'master' }}" loading="lazy" alt="{{ block.settings.review_stars.alt | escape }}" srcset="{{ block.settings.review_stars | img_url: '1920x' }} 1920w,{{ block.settings.review_stars | img_url: '1600x' }} 1600w,{{ block.settings.review_stars | img_url: '1366x' }} 1366w,{{ block.settings.review_stars | img_url: '1024x' }} 1024w,{{ block.settings.review_stars | img_url: '768x' }} 768w,{{ block.settings.review_stars | img_url: '640x' }} 640w">{%- endif -%}</div>
                    <div class="testimonial-title">{{ block.settings.titel | newline_to_br }}</div>
                    <div class="testimonial-paragraph">{{ block.settings.paragraph | newline_to_br }}</div>
                  </div>
                  <div class="testimonial-trust">
                    <div class="testimonial-identity">
                      <div class="testimonial-person">{{ block.settings.reviewer | newline_to_br }}</div>
                      <div class="testimonial-verified">
                        <div class="testimonial-check"><img src="{{ 'check.svg' | asset_url }}" loading="lazy" alt=""></div>
                        <div>{{ block.settings.text_naast_checkmark | newline_to_br }}</div>
                      </div>
                    </div>
                    <div class="testimonial-image"><img src="{{ 'instant-warmth-experience.png' | asset_url }}" loading="lazy" sizes="48px" srcset="{{ 'instant-warmth-experience-p-500.png' | asset_url }} 500w, {{ 'instant-warmth-experience.png' | asset_url }} 594w" alt="" class="testimonial-img"></div>
                  </div>
                </div>
              </div>{%- endif -%}{%- endfor -%}
            </div>
            <div class="slider-arrow-container-relative">
              <div id="review-prev-arrow" class="slider-arrow"><img src="{{ 'arrow-right.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
              <div id="review-next-arrow" class="slider-arrow"><img src="{{ 'right-arrow.svg' | asset_url }}" loading="lazy" alt="" class="arrow-swipe"></div>
            </div>
          </div>
        </div>
      </div>
    </div>
  

<script>var currentSection = document.currentScript.closest('.shopify-section');currentSection.setAttribute("class","testimonials");</script>
        
{% schema %}{
